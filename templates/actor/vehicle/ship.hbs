<section class='tab ship sheet-body {{tab.cssClass}}' data-group='primary' data-tab='ship'>
  <div class=''>
    <div class='grid grid-4col'> <!-- SWNRShipData extends SWNRVehicleTemplateBase-->
      <div class="resource">
        {{formGroup systemFields.lifeSupportDays value=system.lifeSupportDays localize=true widget=groupWidget}}
      </div>
      <div class="resource">
        {{formGroup systemFields.fuel value=system.fuel localize=true widget=groupWidget}}
      </div>
      <div class="resource">
        {{formGroup systemFields.spikeDrive value=system.spikeDrive localize=true widget=groupWidget}}
      </div>
      <div class="resource">
        {{formGroup systemFields.cargo value=system.cargo localize=true widget=groupWidget}}
      </div>
      <div class="resource">
        {{formGroup systemFields.tl value=system.tl localize=true}}
      </div>
      <div class="resource">
        {{formGroup systemFields.shipClass value=system.shipClass localize=true}}
      </div>
      <div class="resource">
        {{formGroup systemFields.shipHullType value=system.shipHullType localize=true}}
      </div>
    </div>
    <div>
      <h3>Costs</h3>
    </div>
    <div class='grid grid-3col'> <!-- SWNRShipData extends SWNRVehicleTemplateBase-->
      <div class="resource">
        {{formGroup systemFields.operatingCost value=system.operatingCost localize=true}}
      </div>
      <div class="resource">
        {{formGroup systemFields.maintenanceCost value=system.maintenanceCost localize=true}}
      </div>
      <div class="resource">
        {{formGroup systemFields.amountOwed value=system.amountOwed localize=true}}
      </div>
      <div class="resource">
        {{formGroup systemFields.paymentAmount value=system.paymentAmount localize=true}}
      </div>
      <div class="resource">
        {{formGroup systemFields.paymentMonths value=system.paymentMonths localize=true}}
      </div>
      <div class="resource">
        {{formGroup systemFields.maintenanceMonths value=system.maintenanceMonths localize=true}}
      </div>
      <div class="resource">
        {{formGroup systemFields.creditPool value=system.creditPool localize=true}}
        <a class="credits-change text-gray-100 hover:text-green-400 transition-colors"
          title="{{localize 'swnr.sheet.credit-change'}} {{actor.system.tweak.debtDisplay}}"
          data-credit-type="creditPool">
          <i class="fas fa-coins"></i> <!--TODO-->
      </div>
      <div class="resource">
        {{formGroup systemFields.lastMaintenance value=system.lastMaintenance localize=true widget=groupWidget}}
      </div>
      <div class="resource">
        {{formGroup systemFields.lastPayment value=system.lastPayment localize=true widget=groupWidget}}
      </div>
      <div class="resource">
        <div class="flex flex-col items-center">
          <a class="calc-cost" title='{{localize ' swnr.sheet.ship.calc-cost'}}'><i
              class="fas fa-2x fa-cash-register"></i></a>
          <label>{{localize 'swnr.sheet.ship.calc-cost'}}</label>
        </div>
      </div>
      <div class="resource">
        <!-- make payment -->
        <div class="flex flex-col items-center text-center">
          <a class="make-payment" title='{{localize ' swnr.sheet.ship.make-payment'}}'><i
              class="fas fa-2x fa-money-bill-wave"></i></a>
          <label>{{localize 'swnr.sheet.ship.make-payment'}}</label>
        </div>
        <div class="">
          Note: If simple-calendar module is installed, travel and schedule will integrate automatically.
        </div>
      </div>
      <div class="resource">
        <!-- pay maintenance -->
        <div class="flex flex-col items-center text-center">
          <a class="pay-maintenance" title='{{localize ' swnr.sheet.ship.pay-maintenance'}}'><i
              class="fas fa-2x fa-tools"></i></a>
          <label>{{localize 'swnr.sheet.ship.pay-maintenance'}}</label>
        </div>
      </div>

      {{!-- <div class="resource">
        {{formGroup systemFields.actionsTaken value=system.actionsTaken localize=true}}
      </div> --}}
      {{!-- <div class="resource">
        {{formGroup systemFields.supportingDept value=system.supportingDept localize=true}}
      </div> --}}
      {{!-- <div class="resource">
        {{formGroup systemFields.roleOrder value=system.roleOrder localize=true}}
      </div> --}}
    </div><!-- end grid-col SWNRShipData extends SWNRVehicleTemplateBase -->

  </div>
</section>