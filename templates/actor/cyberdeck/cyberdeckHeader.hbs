{{! Sheet Header }}
<header class='sheet-header'>
  <div class="profile-img"><!-- Profile Image -->

    <img
      class='profile-img'
      src='{{actor.img}}'
      data-edit='img'
      data-action='onEditImage'
      title='{{actor.name}}'
      height='100'
      width='100'
    />

    <div class="resource-bar"><!-- The character health bar -->
      <div style="width:{{system.health.percentage}}%" class="health-fill"></div>
        <div class="text">
          {{localize 'SWN.Actor.Cyberdeck.FIELDS.health.label'}}
            <input
              type='text'
              name='system.health.value'
              value='{{system.health.value}}'
              data-dtype='Number'
              class='nested-field short-field align-right current-value'
            />
          <p>/</p>
            <input
              type='text'
              name='system.health.max'
              value='{{system.health.max}}'
              data-dtype='Number'
              class='nested-field short-field'
            />
        </div>
    </div>


    <div class="resource-bar"><!-- The character health bar -->
      <div style="width:{{system.memory.percentage}}%" class="strain-fill"></div>
        <div class="text">
          {{localize 'SWN.Actor.Cyberdeck.FIELDS.memory.label'}}
            <input
              type='text'
              name='system.memory.value'
              value='{{system.memory.value}}'
              data-dtype='Number'
              class='nested-field short-field align-right current-value'
            />
          <p>/</p>
            <input
              type='text'
              name='system.memory.max'
              value='{{system.memory.max}}'
              data-dtype='Number'
              class='nested-field short-field'
            />
        </div>
    </div>

  </div>
  <div class='header-fields'>
    <div class='document-name'>
      <input
        name='name'
        type='text'
        value='{{actor.name}}'
        placeholder='Name'
      />
    </div>
    <div class='resources grid grid-3col'>
        <div
          class='resource grid-span-3 thin-bar'
          style="text-align:right;"
        >
          <label class='resource-label'>{{localize 'swnr.item.favorite'}}</label>
          <input
            type="checkbox"
            class="small-checkbox"
            name="system.favorite"
            {{#if system.favorite}}checked{{/if}}
          />
        </div>
      {{! "flex-group-center" is also defined in the _grid.scss file
        and it will add a small amount of padding, a border, and will
        center all of its child elements content and text. }}
    <div class='resources grid grid-4col'>
      {{formGroup systemFields.health value=system.health localize=true widget=headerWidget}}
      {{formGroup systemFields.memory value=system.memory localize=true widget=headerWidget}}
      {{formGroup systemFields.cpu value=system.cpu localize=true widget=headerWidget}}
      {{formGroup systemFields.access value=system.access localize=true widget=headerWidget}}
    </div>

    <div class="resource grid grid-3col thin-bar">
      <div class='resource' style="">
        <label class='resource-label'>
          {{localize 'SWN.Actor.Cyberdeck.FIELDS.neuralBuffer.label'}}
          </label>
        <input type="checkbox" class="small-checkbox" name="system.neuralBuffer" {{#if system.neuralBuffer}}checked{{/if}} />
      </div>
      <div class='resource' style="">
        <label class='resource-label'>
          {{localize 'SWN.Actor.Cyberdeck.FIELDS.wirelessConnectionPenalty.label'}}
          </label>
        <input type="checkbox" class="small-checkbox" name="system.wirelessConnectionPenalty" {{#if system.wirelessConnectionPenalty}}checked{{/if}} />
      </div>
      <div class='resource' style="">
        <label class='resource-label'>
          {{localize 'SWN.Actor.Cyberdeck.FIELDS.crownPenalty.label'}}
          </label>
        <input type="checkbox" class="small-checkbox" name="system.crownPenalty" {{#if system.crownPenalty}}checked{{/if}} />
      </div>
    </div>

    <div class="resource grid grid-4col thin-bar">
      {{formGroup systemFields.baseShielding value=system.baseShielding localize=true widget=headerWidget}}
      {{formGroup systemFields.bonusShielding value=system.bonusShielding localize=true widget=headerWidget}}
      {{formGroup systemFields.bonusAccess value=system.bonusAccess localize=true widget=headerWidget}}
    </div>
    <div class="resource grid grid-4col thin-bar">
      {{formGroup systemFields.cost value=system.cost localize=true widget=headerWidget}}
      {{formGroup systemFields.encumberance value=system.encumberance localize=true widget=headerWidget}}
      {{formGroup systemFields.hacker value=system.hacker localize=true widget=headerWidget}}
    </div>


         
    </div>
  </div>
</header>