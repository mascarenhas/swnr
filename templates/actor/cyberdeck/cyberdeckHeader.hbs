{{! Sheet Header }}
<header class='sheet-header'>
  <div class="profile-img"><!-- Profile Image -->

    <img
      class='profile-img'
      src='{{actor.img}}'
      data-edit='img'
      data-action='onEditImage'
      title='{{actor.name}}'
      height='100'
      width='100'
    />

  </div>
  <div class='header-fields'>
    <div class='document-name'>
      <input
        name='name'
        type='text'
        value='{{actor.name}}'
        placeholder='Name'
      />
    </div>
    <div class='resources grid grid-3col'>
        <div
          class='resource grid-span-3 thin-bar'
          style="text-align:right;"
        >
          <label class='resource-label'>{{localize 'swnr.item.favorite'}}</label>
          <input
            type="checkbox"
            class="small-checkbox"
            name="system.favorite"
            {{#if system.favorite}}checked{{/if}}
          />
        </div>
      {{! "flex-group-center" is also defined in the _grid.scss file
        and it will add a small amount of padding, a border, and will
        center all of its child elements content and text. }}
      <div class='resource flex-group-center'>
        <label for='system.health.value' class='resource-label'>
          {{localize 'SWN.Actor.Cyberdeck.FIELDS.shielding.value.label'}}
        </label>
        <div class='resource-content flexrow flex-center flex-between'>
          <input
            type='text'
            name='system.health.value'
            value='{{system.health.value}}'
            data-dtype='Number'
          />
          <span> / </span>
          <input
            type='text'
            name='system.health.max'
            value='{{system.health.max}}'
            data-dtype='Number'
          />
        </div>
      </div>

      <div class='resource flex-group-center'>
        <label for='system.health.value' class='resource-label'>
          {{localize 'SWN.Actor.Cyberdeck.FIELDS.memory.value.label'}}
        </label>
        <div class='resource-content flexrow flex-center flex-between'>
          <input
            type='text'
            name='system.memory.value'
            value='{{system.memory.value}}'
            data-dtype='Number'
          />
          <span> / </span>
          <input
            type='text'
            name='system.memory.max'
            value='{{system.memory.max}}'
            data-dtype='Number'
          />
        </div>
      </div>

      <div class='resource flex-group-center'>
        <label for='system.health.value' class='resource-label'>
          {{localize 'SWN.Actor.Cyberdeck.FIELDS.cpu.value.label'}}
        </label>
        <div class='resource-content flexrow flex-center flex-between'>
          <input
            type='text'
            name='system.cpu.value'
            value='{{system.cpu.value}}'
            data-dtype='Number'
          />
          <span> / </span>
          <input
            type='text'
            name='system.cpu.max'
            value='{{system.cpu.max}}'
            data-dtype='Number'
          />
        </div>
      </div>

      <div class="resource">
        <div class="form-group">
          <label>{{localize 'SWN.Actor.Cyberdeck.FIELDS.baseShielding.label'}}</label>
          <div class="form-fields">
            <input
              disabled
              type="number"
              name="system.baseShielding.value"
              value="{{system.baseShielding.value}}"
              min="0"
              step=".05"
            >
          </div>
        </div>
      </div>
      <div class="resource">
        <div class="form-group">
          <label>{{localize 'SWN.Actor.Cyberdeck.FIELDS.bonusShielding.label'}}</label>
          <div class="form-fields">
            <input
              disabled
              type="number"
              name="system.bonusShielding.value"
              value="{{system.bonusShielding.value}}"
              min="0"
              step=".05"
            >
          </div>
        </div>
      </div>
      <div class="resource">
        <div class="form-group">
          <label>{{localize 'SWN.Actor.Cyberdeck.FIELDS.bonusAccess.label'}}</label>
          <div class="form-fields">
            <input
              disabled
              type="number"
              name="system.bonusAccess.value"
              value="{{system.bonusAccess.value}}"
              min="0"
              step=".05"
            >
          </div>
        </div>
      </div>
      <div class='resource grid-span-3' style="">
        <label class='resource-label'>
          {{localize 'SWN.Actor.Cyberdeck.FIELDS.neuralBuffer.label'}}
          </label>
        <input type="checkbox" class="small-checkbox" name="system.neuralBuffer" {{#if system.neuralBuffer}}checked{{/if}} />
      </div>
      <div class='resource grid-span-3' style="">
        <label class='resource-label'>
          {{localize 'SWN.Actor.Cyberdeck.FIELDS.wirelessConnectionPenalty.label'}}
          </label>
        <input type="checkbox" class="small-checkbox" name="system.wirelessConnectionPenalty" {{#if system.wirelessConnectionPenalty}}checked{{/if}} />
      </div>
      <div class='resource grid-span-3' style="">
        <label class='resource-label'>
          {{localize 'SWN.Actor.Cyberdeck.FIELDS.crownPenalty.label'}}
          </label>
        <input type="checkbox" class="small-checkbox" name="system.crownPenalty" {{#if system.crownPenalty}}checked{{/if}} />
      </div>
      <div class="resource">
        <div class="form-group">
          <label>{{localize 'SWN.Actor.Cyberdeck.FIELDS.cost.label'}}</label>
          <div class="form-fields">
            <input
              disabled
              type="number"
              name="system.cost.value"
              value="{{system.cost.value}}"
              min="0"
              step=".05"
            >
          </div>
        </div>
      </div>
            <div class="resource">
        <div class="form-group">
          <label>{{localize 'SWN.Actor.Cyberdeck.FIELDS.encumberance.label'}}</label>
          <div class="form-fields">
            <input
              disabled
              type="number"
              name="system.encumberance.value"
              value="{{system.cost.value}}"
              min="0"
              step=".05"
            >
          </div>
        </div>
      </div>  
            <div class="resource">
        <div class="form-group">
          <label>{{localize 'SWN.Actor.Cyberdeck.FIELDS.hacker.label'}}</label>
          <div class="form-fields">
            <input
              disabled
              type="text"
              name="system.hacker.value"
              value="{{system.hacker}}"
            >
          </div>
        </div>
      </div>              
    </div>
  </div>
</header>