{{! Sheet Header }}
<header class='sheet-header'>
  <div class="profile-img"><!-- Profile Image -->
    <img
      class='profile-img'
      src='{{actor.img}}'
      data-edit='img'
      data-action='onEditImage'
      title='{{actor.name}}'
    />
    <div class="portrait-button" 
      title='{{localize 'swnr.sheet.rest'}}'
      data-action='rest'
      style="left:0; top:0"
    >
      <i class="fa-solid fa-bed" style="font-size: 20px;"></i>
    </div>
    {{#if (eq actor.type 'character')}}
      <div class="portrait-button" 
        title='{{localize 'swnr.sheet.scene'}}'
        data-action='scene'
        style="right:0; top:0"
      >
        <i class="fas fa-hourglass-end"></i>
      </div>
    {{/if}}
    <!-- The character health bar -->
    <div class="health-bar">
      <div style="width:{{system.health.percentage}}%" class="health-fill"></div>
      <div class="health-text">
        HP <input data-name="health.value" type="text" value="{{system.health.value}}" class="health-input nested-field short-field current-value" style="text-align:right;margin:0px;" {{#unless owner}}disabled{{/unless}}/>
        <p style="margin:0px">/</p>
        <input name="health.max" type="number" value="{{system.health.max}}" class="health-input nested-field short-field" style=";margin:0px;"/>
      </div>
    </div>
  </div>

    {{! The grid classes are defined in scss/global/_grid.scss. To use,
      use both the "grid" and "grid-Ncol" class where "N" can be any number
      from 1 to 12 and will create that number of columns.  }}
    <div class='resources grid grid-4col'>
      
      <div class='document-name grid-span-3'><!-- Name -->
        <input
          name='name'
          type='text'
          value='{{actor.name}}'
          placeholder='Name'
        />
      </div>
      
      <div class="resource flex-group-center"><!-- Level / HD -->
        {{#if (eq actor.type 'character')}}
          <div class='resource-content flexrow flex-center flex-between'>
            <input
              type='text'
              name='system.level.value'
              value='{{system.level.value}}'
              data-dtype='Number'
              class='field header short'
            />
          </div>
          <label class='resource-label'>
            {{localize 'SWN.Actor.Character.FIELDS.attributes.level.value.label'}}
          </label>
        {{/if}}
        {{#if (eq actor.type 'npc')}}
          <label class='resource-label'>
            {{localize 'SWN.Actor.NPC.FIELDS.cr.label'}} / {{localize 'SWN.Actor.NPC.xp.label'}}
          </label>
          <div class='resource-content flexrow flex-center flex-between'>
            <input
              type='text'
              name='system.cr'
              value='{{system.cr}}'
              data-dtype='Number'
              class='field header'
            />
            <span></span>
            <input
              type='text'
              disabled='true'
              name='system.xp'
              value='{{system.xp}}'
              data-dtype='Number'
              class='field header'
            />
          </div>
        {{/if}}
      </div>

      {{! "flex-group-center" is also defined in the _grid.scss file
        and it will add a small amount of padding, a border, and will
        center all of its child elements content and text. }}
      <div class='resource flex-group-center'><!-- Health-->
        <div class='resource-content flexrow flex-center flex-between'>
          <input
            type='text'
            name='system.health.value'
            value='{{system.health.value}}'
            data-dtype='Number'
            class='field header'
          />
          <span> / </span>
          <input
            type='text'
            name='system.health.max'
            value='{{system.health.max}}'
            data-dtype='Number'
            class='field header'
          />
        </div>
        <label for='system.health.value' class='resource-label'>
          {{localize 'SWN.Actor.base.FIELDS.health.value.label'}}
        </label>
      </div>

      <div class='resource flex-group-center'><!-- -->
        <div class='resource-content flexrow flex-center flex-between'>
          <input
            type='text'
            name='system.power.value'
            value='{{system.power.value}}'
            data-dtype='Number'
            class='field header'
          />
          <span> / </span>
          <input
            type='text'
            name='system.power.max'
            value='{{system.power.max}}'
            data-dtype='Number'
            class='field header'
          />
        </div>
        <label for='system.power.value' class='resource-label'>
          {{localize 'SWN.Actor.base.FIELDS.power.value.label'}}
        </label>
      </div>


      <div class='resource flex-group-center'><!-- -->
          
          <div class="field">
            <input type="text" class="nested-field short-field" value="123"/>
            / XX
          </div>
          <label class='resource-label'>
            Test
          </label>
      </div>
    </div>
  </div>
</header>