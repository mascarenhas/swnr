<header class='sheet-header'>
  <div class="flexrow">
    <div class="item-img"><!-- Profile Image -->
      <img
        class='item-img'
        src='{{item.img}}'
        data-edit='img'
        data-action='onEditImage'
        title='{{item.name}}'
      />
    </div>
    <div class='header-fields'>
      <div class='document-name'>
        <input name='name' type='text' value='{{item.name}}' placeholder='Name' />
      </div>
      <div class='grid grid-3col'>
        <div class='resource grid-span-3 thin-bar' style="text-align:right;" >
          <label class='resource-label'>{{localize 'swnr.item.favorite'}}</label>
          {{formInput systemFields.favorite value=system.favorite localize=true}}
        </div>
        <div class='resource'>
        <label class='resource-label'>{{localize 'swnr.item.cost'}}</label>
          {{formInput systemFields.cost value=system.cost localize=true}}
        </div>
    </div>
  </div><!--flexrow-->
</header>