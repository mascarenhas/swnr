<header class='sheet-header'>
  <div class="item-img"><!-- Profile Image -->
    <img
      class='item-img'
      src='{{item.img}}'
      data-edit='img'
      data-action='onEditImage'
      title='{{item.name}}'
    />
  </div>
  <div class='header-fields'>
    <div class='document-name'>
      <input name='name' type='text' value='{{item.name}}' placeholder='Name' />
    </div>
    <div class='grid grid-2col'>
      <div class='resource'>
        <label class='resource-label'>{{localize 'SWN.Item.Gear.FIELDS.quantity.label'}}</label>
        <input
          type='text'
          name='system.quantity'
          value='{{system.quantity}}'
          data-dtype='Number'
        />
      </div>
      <div class='resource'>
        <label class='resource-label'>{{localize 'swnr.item.cost'}}</label>
        <input
          type='text'
          name='system.cost'
          value='{{system.cost}}'
          data-dtype='Number'
        />
      </div>
      <div class='resource'>
        <label class='resource-label'>{{localize 'swnr.item.encumbrance'}}</label>
        <input
          type='text'
          name='system.encumbrance'
          value='{{system.encumbrance}}'
          data-dtype='Number'
        />
      </div>
      <div class='resource'>
        <span>
          <label class='resource-label'>{{localize 'swnr.item.bundledCount'}}</label>
          <input type="checkbox" class="small-checkbox" name="system.bundle.bundled" {{#if system.bundle.bundled}}checked{{/if}} />
        </span>
        
        <input
          type='text'
          name='system.bundle.amount'
          value='{{system.bundle.amount}}'
          data-dtype='Number'
        />
      </div>
      <div class='resource'>
        <label class='resource-label'>{{localize 'swnr.item.favorite'}}</label>
        <input type="checkbox" class="small-checkbox" name="system.favorite" {{#if system.favorite}}checked{{/if}} />
      </div>
    </div>
  </div>
  <div class="header-fields">
    adljadlj
  </div>
</header>