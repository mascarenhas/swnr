<header id='header-ship' class='sheet-header'>
    <div class='flexcol'>
        <div class='flexrow'>
            <div class='item-img'>
                <img class='item-img' src='{{item.img}}' data-edit='img' data-action='onEditImage'
                    title='{{item.name}}' />
            </div>
            <div class='header-fields'>
                <div class='document-name'>
                    <input name='name' type='text' value='{{item.name}}' placeholder='Name' />
                </div>
                <div class='grid' style='grid-template-columns: 2fr 1fr 1fr'>
                    <div class='resource grid-span-3 thin-bar' style="text-align:right;">
                        <label class='resource-label'>{{localize 'swnr.item.favorite'}}</label>
                        <input type="checkbox" class="small-checkbox" name="system.favorite" {{#if
                            system.favorite}}checked{{/if}} />
                    </div>
                    <div class='resource'>
                        {{formGroup systemFields.cost value=system.cost localize=true}}
                    </div>
                    <div class='resource'>
                        {{formGroup systemFields.power value=system.power localize=true}}
                    </div>
                    <div class='resource'>
                        {{formGroup systemFields.mass value=system.mass localize=true}}
                    </div>
                </div>
                <div style='display: flex;'>
                    <div class='resource'>
                        <label class="resource-label">Broken</label>
                        <input type="checkbox" class="small-checkbox" name="system.broken">
                    </div>
                    <div class='resource'>
                        <label class="resource-label">Cost Multiplier</label>
                        <input type="checkbox" class="small-checkbox" name="system.broken">
                    </div>
                    <div class='resource'>
                        <label class="resource-label">Mass Multiplier</label>
                        <input type="checkbox" class="small-checkbox" name="system.broken">
                    </div>
                    <div class='resource'>
                        <label class="resource-label">Power Multiplier</label>
                        <input type="checkbox" class="small-checkbox" name="system.broken">
                    </div>
                </div>
            </div>
        </div>
        <div class='flexrow'>
            <div class='header-fields'>
                <div class='resource'>
                    {{formGroup systemFields.minClass value=system.minClass localize=true}}
                </div>
            </div>
        </div>
    </div>
</header>