<section
  class='tab {{tab.cssClass}}'
  data-group='primary'
  data-tab='attributes'
>
  <div class='grid grid-4col'>
    <div class="resource">
      {{formGroup systemFields.damage value=system.damage localize=true}}
    </div>
    <div class="resource">
      {{formGroup systemFields.power value=system.power localize=true}}
    </div>
    <div class="resource">
      {{formGroup systemFields.mass value=system.mass localize=true}}
    </div>
    <div class="resource">
      {{formGroup systemFields.hardpoint value=system.hardpoint localize=true}}
    </div>
    <div class="resource">
      {{formGroup systemFields.minClass value=system.minClass localize=true}}
    </div>
    <div class="resource">
      {{formGroup systemFields.tl value=system.tl localize=true}}
    </div>
    <div class="resource">
      {{formGroup systemFields.qualities value=system.qualities localize=true}}
    </div>
  </div>
</section>