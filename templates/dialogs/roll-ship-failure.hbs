          <option value="break-all">{{localize 'swnr.dialog.failure.break-all'}}</option>
          <option value="all-50">{{localize 'swnr.dialog.failure.all-50'}}</option>
          <option value="break-1" selected>{{localize 'swnr.dialog.failure.break-1'}}</option>
        </select>    
      </div>
  </div>
</form>
