<form class="flex">
  <div class="flex flex-col">
    <div class="flex flexrow">
        <label for="inc-drive">{{localize 'swnr.dialog.failure.inc-drive'}}:</label>
        <input type="checkbox" name="inc-drive" id="inc-drive" checked />
    </div>
    <div class="flex flexrow">
        <label for="inc-wpn">{{localize 'swnr.dialog.failure.inc-wpn'}}:</label>
        <input type="checkbox" name="inc-wpn" id="inc-wpn" checked />
    </div>
    <div class="flex flexrow">
        <label for="inc-fit">{{localize 'swnr.dialog.failure.inc-fit'}}:</label>
        <input type="checkbox" name="inc-fit" id="inc-fit" checked />
    

    </div>
    <div class="flex flexrow">
    <label for="inc-def">{{localize 'swnr.dialog.failure.inc-def'}}:</label>
        <input type="checkbox" name="inc-def" id="inc-def" />
    

    </div>
    <div class="flex flexrow">
        <label for="what">{{{localize 'swnr.dialog.failure.what'}}}</label>
